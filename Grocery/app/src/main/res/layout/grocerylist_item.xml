<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:elevation="400dp"
            app:cardBackgroundColor="@android:color/holo_green_light"
            app:cardCornerRadius="40dp"
            app:cardElevation="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/vegetable_photo"
                    android:layout_width="86dp"
                    android:layout_height="111dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:id="@+id/vegetable_name"
                    android:layout_width="65dp"
                    android:layout_height="26dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/vegetable_photo"
                    android:layout_marginEnd="21dp" />

                <TextView
                    android:id="@+id/vegetable_price"
                    android:layout_width="84dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/vegetable_quantity"
                    android:text="$" />

                <TextView
                    android:id="@+id/vegetable_quantity"
                    android:layout_width="62dp"
                    android:layout_height="31dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/vegetable_weight"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/vegetable_weight"
                    android:layout_width="70dp"
                    android:layout_height="37dp"
                    android:layout_alignEnd="@+id/vegetable_name"
                    android:layout_centerVertical="true" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
